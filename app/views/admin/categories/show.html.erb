<% content_for :page_title do %>Detalhes da Categoria<% end %>

<% content_for :page_actions do %>
  <%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_admin_category_path(@category), class: 'mr-3 btn btn-light' %>
  <%= link_to '<i class="fa fa-angle-left"></i> Voltar'.html_safe, admin_categories_path, class: 'btn btn-light' %>
<% end %>

<div class="card shadow mb-4">
  <div class="card-header"><b>Visualização da Categoria</b></div>

  <div class="container row mt-3 pb-3">
    <div class="col-md-4">
      <b>Informações da Categoria</b>
    </div>

    <div class="col-md-8 container">
      <div class="form-group">
        <%= label_tag :name, 'Nome' %>
        <%= text_field_tag :name, @category.name, class: 'form-control', disabled: true %>
      </div>

      <div class="form-group">
        <%= label_tag :visible, 'Visível' %>
        <%= text_field_tag :visible, @category.visible ? 'Sim': 'Não', class: 'form-control', disabled: true %>
      </div>

      <div class="form-group">
        <%= label_tag :image, 'Imagem' %>
        <div class="row">
          <div class="col-md-2 d-flex justify-content-end">
            <div class="img-preview-container">
              <% if @category.image.attached? %>
                <%= image_tag @category.image.variant(resize_to_limit: [60, 60]), id: 'preview', class: 'img-preview' %>
              <% else %>
                <img id="preview" class="img-preview" height="60" width="60" />
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
