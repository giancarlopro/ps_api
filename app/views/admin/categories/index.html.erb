<% content_for :page_title do %>Categorias<% end %>

<% content_for :page_actions do %>
  <span>
    <form class="form-inline mr-2">
      <%= render "layouts/shared/search_field" %>
    </form>
  </span>

  <span>
    <a href="<%= new_admin_category_path %>" class="btn btn-red">Cadastrar Nova</a>
  </span>
<% end %>

<div class="card shadow">
  <table class="table">
    <thead class="card-header">
      <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Visível</th>
        <th>Ações</th>
      </tr>
    </thead>
    
    <tbody class="card-body">
      <% @categories.each do |category| %>
        <tr>
          <td>
            <% if category.image.attached? %>
              <%= image_tag category.image.variant(resize_to_limit: [50, 30]) %>
            <% end %>
          </td>
          <td><%= category.name %></td>
          <td><%= category.visible ? 'Sim': 'Não' %></td>
          <td>
            <div class="btn-group">
              <%= link_to '<i class="fas fa-eye"></i>'.html_safe, admin_category_path(category), class: 'btn btn-light btn-sm' %>
              <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_admin_category_path(category), class: 'btn btn-light btn-sm' %>
              <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-sm' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="card-footer d-flex justify-content-end">
    <%= paginate @categories %>
  </div>
</div>
