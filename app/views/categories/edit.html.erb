<% content_for :page_title do %>Editar Categoria<% end %>

<% content_for :page_actions do %>
  <%= link_to '<i class="fa fa-angle-left"></i> Cancelar'.html_safe, admin_category_path(@category), class: 'btn btn-light' %>
<% end %>

<div class="card shadow mb-4">
  <div class="card-header"><b>Formulário de edição</b></div>

  <div class="container row mt-3 pb-3">
    <div class="col-md-4">
      <b>Informações da Categoria</b>
    </div>

    <div class="col-md-8">
      <%= render 'form', category: @category %>
    </div>
  </div>
</div>
